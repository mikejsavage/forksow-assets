setSize 24 * 1.333 * %VIDHEIGHT / %VIDWIDTH, 24
if %INSTAGIB == 0
	if %ARMOR < 100
		drawPicByItemIndex #ITEM_GREEN_ARMOR
		setColor 0.11 0.84 0.26 1
	endif
	if %ARMOR >= 100
		if %ARMOR < 125
			drawPicByItemIndex #ITEM_YELLOW_ARMOR
			setColor 1 0.96 0 1
		endif
	endif
	if %ARMOR >= 125
		drawPicByItemIndex #ITEM_RED_ARMOR
		setColor 1 0 0 1
	endif
endif
if %INSTAGIB == 1
	drawPicByItemIndex #ITEM_WARSHELL
	setColor 0 0.6 1 1
endif
