moveCursor 0, 27
setFontFamily con_fontSystem
setFontSize %VIDHEIGHT / 43
setColor 0.4 1 0.4 0.5
if %MATCH_STATE == #MATCH_STATE_WARMUP
	drawString "Warmup"
endif
if %OVERTIME
	drawString "Overtime"
endif
