// 78 offset for health and armor, 68 for CTF actions or chasing when flipped
if %TOUCH_FLIP > 0
	setAlign #RIGHT, #BOTTOM
	setCursor #WIDTH - 10 * 1.333 * %VIDHEIGHT / %VIDWIDTH, #HEIGHT - 136
endif
if %TOUCH_FLIP < 0
	setAlign #LEFT, #BOTTOM
	setCursor 10 * 1.333 * %VIDHEIGHT / %VIDWIDTH, #HEIGHT - 136
endif
setSize 165 * 1.333 * %VIDHEIGHT / %VIDWIDTH, 165
setColor 0.8 0.8 0.8 1
drawMiniMap 1 0
